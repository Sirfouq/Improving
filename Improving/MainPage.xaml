<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Improving.MainPage">

   
    <StackLayout>
        <Frame BackgroundColor="#216E8B" Padding="0" CornerRadius="0">
            <Label Text="Welcome" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" FontFamily="Rowdies-Light"/>
        </Frame>
        
        <Entry x:Name="User"
               TextColor="#a4aeba"
               Placeholder="User:"
               PlaceholderColor="#a4aeba"
               VerticalOptions="Start"
               />
         
        
        <Entry x:Name="Pass"
               TextColor="#a4aeba" 
               Placeholder="Pass:"
               PlaceholderColor="#a4aeba"
               IsPassword="True"
               VerticalOptions="Center"
               />
            
        <Button Text="Register"
                x:Name="btnRegister"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                TextColor="White"
                BackgroundColor="#216E8B"
                CornerRadius="20"
                Clicked="OnButtonClicked">
                
                
        </Button>
        
    </StackLayout>
 


</ContentPage>
